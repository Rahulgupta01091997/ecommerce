<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link href="images/logo-white/favicon.png" rel="icon">
    <title>Profile</title>
    <link rel="stylesheet" href="plugins/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    
    <link rel="stylesheet" href="css/style.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src=" https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <link href="css/profile.css" rel="stylesheet">
</head>
<body>
    <div class="header--sidebar"></div>
    <%- include('static/header',{userlogin : user ? user.userName : ''}) %><br>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <section id="form"><!--form-->
                    <div class="container">
                        <div class="row updaterow">
                            <div class="col-12 signup-form-outer" id="signup-width">
                                <center><h2>Update Profile</h2></center><br>
                                <div class="signup-form"><!--sign up form-->
                                    <form name="eshopform" id="updateProfile" autocomplete="on" style="width: 35%;">
                                        <input type="hidden" name="id" value="<%= user._id%>">
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label>Name :</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="text" class="form-control" name="name" placeholder="Name" value="<%= user.userName%>" required/>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label>Email :</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="email" class="form-control" name="email" placeholder="Email Address" value="<%= user.userEmail%>" disabled/>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label>Address :</label>
                                            </div>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="address" placeholder="Address"><%= user.userAddress%></textarea> 
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label>Contact :</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="number" class="form-control" name="contact" placeholder="Contact" value="<%= user.userContact%>" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                <label>Password :</label>
                                            </div>
                                            <div class="col-md-9">
                                                <input type="password" class="form-control" name="pass" placeholder="Password" value="<%= user.userPassword%>" required/>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <center><button class="btn btn-default responsivebtn" type="submit">Update</button></center>
                                        </div>
                                    </form>
                                </div><!--/sign up form-->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <br>
    <%- include("static/footer")%>
    <script type="text/javascript" src="plugins/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/main.js"></script>
    <script>
        $(document).ready(function(){
            $("#updateProfile").on('submit',function(){
                $.ajax({
                    url:'/profile',
                    type:'post',
                    data:$("#updateProfile").serialize(),
                    success:function(res){
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'profile updated successfully.',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        // location.reload();
                    }
                })
                return false
            })
        })
    </script>
</body>

</html>